FROM golang:alpine AS builder

RUN apk update && apk add --no-cache git

WORKDIR /app

COPY . .
WORKDIR /app/services/montir_service

RUN go build -o binary

FROM alpine
WORKDIR /app/services/montir_service
COPY --from=builder /app/services/montir_service /app/services/montir_service

ENTRYPOINT ["/app/services/montir_service/binary"]