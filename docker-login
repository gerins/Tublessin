FROM golang:alpine AS builder

RUN apk update && apk add --no-cache git

WORKDIR /app

COPY . .
WORKDIR /app/services/login_service

RUN go build -o binary

FROM alpine
WORKDIR /app/services/login_service
COPY --from=builder /app/services/login_service /app/services/login_service

ENTRYPOINT ["/app/services/login_service/binary"]